# Databricks Asset Bundle - Local Development Configuration
# Copy this file to .env and customize the values for your environment

# Databricks Configuration
DATABRICKS_HOST=https://your-databricks-instance.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-personal-access-token

# SQL Server Configuration
SQL_SERVER_HOST=your-sql-server.database.windows.net
SQL_DATABASE_NAME=WorldWideImporters
SQL_USERNAME=your-sql-username
SQL_PASSWORD=your-sql-password

# Unity Catalog Configuration
CATALOG_NAME=don_datalab_catalog
SCHEMA_NAME=bronze

# Notification Configuration
NOTIFICATION_EMAIL=your-email@company.com

# Optional: Override default settings
# DATABRICKS_CLI_VERSION=0.210.0
# CLUSTER_NODE_TYPE=Standard_DS3_v2
# CLUSTER_NUM_WORKERS=2

# Development Settings
# Set to true to enable verbose logging
# DEBUG_MODE=false

# Set to true to skip certain validations during development
# SKIP_VALIDATIONS=false
